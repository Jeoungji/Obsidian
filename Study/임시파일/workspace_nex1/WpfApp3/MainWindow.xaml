<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Advanced Serial Communicatior" Height="720" Width="1280">
    <Grid>
        <Grid HorizontalAlignment="Left" Width="300" Margin="10,0,0,10">
            <TextBlock Text="Connected to: " VerticalAlignment="Top" HorizontalAlignment="Left" Padding="5"/>
            <TextBlock Text="COM5" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="5" Margin="88,0,0,0"/>
            <ListBox Margin="0, 150, 0, 90"/>
            <Button VerticalAlignment="Bottom" Height="40" Content="Refresh List" Margin="0,0,0,50"/>
            <Button VerticalAlignment="Bottom" Height="40" Content="Connect"/>
        </Grid>
        <Grid Margin="315 10 10 10">
            <GroupBox Header="Messages" Margin="0,0,0,45">
                <Grid>
                    <TextBox/>
                </Grid>
            </GroupBox>
            <Grid VerticalAlignment="Bottom" Height="40">
                <Button HorizontalAlignment="Left" Width="80" Content="Send"/>
                <TextBox Text="Some Message" VerticalContentAlignment="Center" Margin="85,0,0,0" Padding="5 3 3 3"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
